@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@model IEnumerable<Role>

<h2>Manage Roles</h2>
<a asp-action="Create" class="btn btn-primary mb-3">Add New Role</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-warning">Edit</a>
                    <form asp-action="Delete" asp-route-id="@role.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger"
                                onclick="return confirm('Are you sure you want to delete this role?');">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
