@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@model UserViewModel

<h2>Edit User</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Username</label>
        <input type="text" class="form-control" asp-for="Username" required />
    </div>

    <div class="form-group">
        <label>Password (Leave blank if you don't want to change)</label>
        <input type="password" class="form-control" asp-for="Password" />
    </div>

    <div class="form-group">
        <label>Roles</label>
        @foreach (var role in ViewBag.Roles as List<Role>)
        {
            <div class="form-check">
                <input type="checkbox" class="form-check-input" name="SelectedRoleIds" value="@role.Id"
                @(Model.SelectedRoleIds.Contains(role.Id) ? "checked" : "") />
                <label class="form-check-label">@role.Name</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>



