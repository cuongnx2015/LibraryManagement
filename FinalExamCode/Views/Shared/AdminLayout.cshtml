<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex" style="height: 100vh;">
        <nav class="bg-dark text-white p-3" style="width: 250px;">
            <h4>Admin Panel</h4>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Home" asp-action="Index">Home</a>
                </li>                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Admin" asp-action="Category">Manage Categories</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Book" asp-action="Index">Manage Books</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="User" asp-action="Index">Manage Users</a> <!-- Mục Users -->
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Role" asp-action="Index">Manage Roles</a> <!-- Mục Roles -->
                </li>          
                <li class="nav-item">
                    <a class="nav-link text-white" asp-controller="Carousel" asp-action="Index">Manage Carousel</a> <!-- Mục Roles -->
                </li>
                <li class="nav-item">
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        <button type="submit" class="btn btn-link nav-link text-white">Logout</button>
                    </form>
                </li>
            </ul>
        </nav>
        <div class="flex-grow-1">
            <header class="bg-light p-3 border-bottom">
                <h5>Welcome, @User.Identity.Name!</h5>
            </header>
            <main class="p-4">
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
