@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@model IEnumerable<FinalExamCode.Models.Carousel>
@{
    ViewData["Title"] = "Manage Carousel";
}
<h1>@ViewData["Title"]</h1>
<a href="@Url.Action("Create")" class="btn btn-primary mb-3">Create New Carousel</a>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Image</th>
            <th>Is Active</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td><img src="@item.ImagePath" alt="Image" style="width: 100px; height: 100px;"></td>
                <td>@item.IsActive</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-warning">Edit</a>
                </td>
                <td>
                    <form asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete this carousel item?');">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
